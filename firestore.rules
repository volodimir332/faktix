rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Функція для перевірки автентифікації
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Функція для перевірки власника документа
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Правила для колекції users
    match /users/{userId} {
      // Читання: тільки власний профіль
      allow read: if isSignedIn() && request.auth.uid == userId;
      
      // Створення: тільки свій профіль
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Оновлення: тільки свій профіль
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      // Видалення: тільки свій профіль
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Правила для колекції clients
    match /clients/{clientId} {
      // Читання: тільки свої клієнти
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      
      // Створення: тільки з своїм userId
      allow create: if isSignedIn() 
                    && isOwner(request.resource.data.userId)
                    && request.resource.data.name is string
                    && request.resource.data.userId == request.auth.uid;
      
      // Оновлення: тільки свої клієнти
      allow update: if isSignedIn() && isOwner(resource.data.userId);
      
      // Видалення: тільки свої клієнти
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    // Правила для колекції invoices
    match /invoices/{invoiceId} {
      // Читання: тільки свої фактури
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      
      // Створення: тільки з своїм userId
      allow create: if isSignedIn() 
                    && isOwner(request.resource.data.userId)
                    && request.resource.data.userId == request.auth.uid;
      
      // Оновлення: тільки свої фактури
      allow update: if isSignedIn() && isOwner(resource.data.userId);
      
      // Видалення: тільки свої фактури
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    // Заборонити доступ до всіх інших колекцій
    match /{document=**} {
      allow read, write: if false;
    }
  }
}





